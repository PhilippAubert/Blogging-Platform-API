{
  "compilerOptions": {
    "module": "nodenext",    // This enables top-level await and ES Modules
    "target": "esnext",      // Ensure the target is set to at least es2017 or esnext
    "outDir": "./dist",
    "lib": ["esnext"],       // Include the latest ECMAScript features
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true, // Allows importing CommonJS modules in an ES module format
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
